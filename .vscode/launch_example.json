    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/target/debug/sslocal",
            "args": [
                "--local-addr",
                "0.0.0.0:2080",
                "-k",
                "username:password",
                "-v",
                "-m",
                "aes-256-gcm", // reversed for compatibility
                "-s",
                "host:port"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "rust: cargo build",
            "env": {
                "HOSTNAME": "test"
            }
        }
    ]
}